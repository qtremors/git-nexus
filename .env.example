# GitNexus Environment Variables

# Application
APP_NAME="GitNexus"
APP_VERSION="3.0.0"
DEBUG=false

# Security - Encryption Key (RECOMMENDED)
# Generate with: uv run python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If not set, key will be stored in data/secret.key (less secure)
FERNET_KEY=

# Database
# Default: sqlite+aiosqlite:///./data/gitnexus.db (inside backend/data)
DATABASE_URL="sqlite+aiosqlite:///./data/gitnexus.db"

# GitHub API
GITHUB_API_URL="https://api.github.com"
# Optional: Personal Access Token for higher rate limits
GITHUB_TOKEN=

# Server Configuration
HOST="127.0.0.1"
PORT=8000

# CORS (Comma separated)
CORS_ORIGINS='["http://localhost:5173", "http://127.0.0.1:5173"]'

# Replay Server
BASE_SERVER_PORT=9000
